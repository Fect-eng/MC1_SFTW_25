<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayoutAdm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MVC.ADMIN.HomeAdm_Activity">

    <!-- 游릴 CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- 游댳 Toolbar -->
        <include
            android:id="@+id/includeTrr"
            layout="@layout/action_bar_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 游댳 Contenedor Principal -->
        <LinearLayout
            android:id="@+id/contenedorMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/includeTrr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- T칤tulo -->
            <TextView
                android:id="@+id/tvWelComePrimario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TU CANCHA"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Animaci칩n -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAnimacion"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="#FFFFFF">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animacionBienvenida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    app:lottie_rawRes="@raw/animat9"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Texto Bienvenida -->
            <TextView
                android:id="@+id/tvBienvenido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Men칰 de tarjetas -->
            <GridLayout
                android:id="@+id/gridMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <!-- Card Horario -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardHorario"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:cardBackgroundColor="#F4B183">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horario / Disp."
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Reservaci칩n -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReserva"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:cardBackgroundColor="#E37D81">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reservaci칩n"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Tu Cancha -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCancha"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:cardBackgroundColor="#5DADE2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tu Cancha"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card Reporte -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReporte"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@android:color/darker_gray"
                    app:cardBackgroundColor="#F4D03F">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_launcher_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reporte"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 游릱 MEN칔 LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationViewAdm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>
