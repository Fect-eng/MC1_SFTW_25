<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hor_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MVC.ADMIN.Horario_Activity">

    <!-- TITLE -->
    <TextView
        android:id="@+id/hor_tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horario de atención"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TABS -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/hor_chipTabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:selectionRequired="false"
        app:layout_constraintTop_toBottomOf="@id/hor_tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/hor_chipHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horario"
            android:checkable="true"
            android:checked="true"
            app:chipCornerRadius="8dp"
            app:checkedIconVisible="false"
            app:chipStrokeColor="#BDBDBD"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/hor_chipPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio / Promoción"
            android:checkable="true"
            app:chipCornerRadius="8dp"
            app:checkedIconVisible="false"
            app:chipStrokeColor="#BDBDBD"
            app:chipStrokeWidth="1dp"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/hor_chipDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles"
            android:checkable="true"
            app:chipCornerRadius="8dp"
            app:checkedIconVisible="false"
            app:chipStrokeColor="#BDBDBD"
            app:chipStrokeWidth="1dp"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- MONTHS + DATE -->
    <LinearLayout
        android:id="@+id/hor_lyMonths"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/hor_chipTabs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/hor_chipGroupMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/hor_chipJulio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JULIO"
                android:checkable="true"
                android:checked="true"
                app:chipCornerRadius="6dp"
                app:chipStrokeColor="#BDBDBD"
                app:chipStrokeWidth="1dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/hor_chipAgosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AGOSTO"
                android:checkable="true"
                app:chipCornerRadius="6dp"
                app:chipStrokeColor="#BDBDBD"
                app:chipStrokeWidth="1dp"/>
        </com.google.android.material.chip.ChipGroup>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/hor_tvFechaActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08/07/2024"
            android:textColor="#9E9E9E"
            android:textSize="12sp"/>
    </LinearLayout>

    <View
        android:id="@+id/hor_divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0"
        app:layout_constraintTop_toBottomOf="@id/hor_lyMonths"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- REPEAT FOR ALL -->
    <CheckBox
        android:id="@+id/hor_cbRepetir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repetir para todos"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hor_divider1"/>

    <!-- DAYS -->
    <LinearLayout
        android:id="@+id/hor_lyDias"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/hor_cbRepetir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hor_day1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUN"
                    android:textSize="12sp"
                    android:textColor="#616161"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hor_day2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAR"
                    android:textSize="12sp"
                    android:textColor="#616161"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hor_day3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="10dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MIE"
                    android:textSize="12sp"
                    android:textColor="#616161"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/hor_day4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:strokeColor="#BDBDBD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JUE"
                    android:textSize="12sp"
                    android:textColor="#616161"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- TIME SELECT -->
    <TextView
        android:id="@+id/hor_tvSeleccioneHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione una hora"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hor_lyDias"/>

    <LinearLayout
        android:id="@+id/hor_lyHoras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/hor_tvSeleccioneHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De:"
            android:textColor="#424242"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hor_tilDesde"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:endIconMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hor_etHoraDesde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="--:--"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   Hasta:"
            android:textColor="#424242"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/hor_tilHasta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:endIconMode="none">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/hor_etHoraHasta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="--:--"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/hor_tvLeyenda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Asigne el día, mes y año de todos los días de atención."
        android:textColor="#757575"
        android:textSize="12sp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/hor_lyHoras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GUARDAR -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/hor_btnGuardar"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="GUARDAR"
        android:textAllCaps="true"
        android:layout_marginTop="14dp"
        app:cornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/hor_tvLeyenda"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- BOTTOM BAR -->
    <LinearLayout
        android:id="@+id/hor_bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/hor_btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏠"
            android:textSize="20sp"
            android:contentDescription="Inicio"/>
    </LinearLayout>

    <Space
        android:id="@+id/hor_spaceBottom"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toTopOf="@id/hor_bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
