<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MVC.ADMIN.reserva_canchas.reserva_canchaADM_Activity">

    <!-- ðŸ”¹ Contenedor Scroll principal -->
    <ScrollView
        android:id="@+id/scrollPrincipal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ðŸ”¹ TÃ­tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario / Disponibilidad"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000" />

            <!-- ðŸ”¹ Selector de Mes -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/spMes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/meses_array" />
            </LinearLayout>

            <!-- ðŸ”¹ SelecciÃ³n de cancha -->
            <Spinner
                android:id="@+id/spCancha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- ðŸ”¹ DÃ­as (4 visibles con scroll horizontal) -->
            <HorizontalScrollView
                android:id="@+id/scrollDias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/contenedorDias"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </HorizontalScrollView>

            <!-- ðŸ”¹ Estado de reserva -->
            <!-- ðŸ”¹ Estado de reserva -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de reserva:"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <!-- ðŸ”¹ Contenedor de etiquetas centrado -->
                <!-- ðŸ”¹ Leyenda de colores centrada y del mismo tamaÃ±o -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Libre"
                        android:textColor="#000000"
                        android:background="#4CAF50"
                        android:paddingVertical="4dp"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="En Proceso"
                        android:textColor="#000000"
                        android:background="#FF9800"
                        android:paddingVertical="4dp"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Reservado"
                        android:textColor="#000000"
                        android:background="#F44336"
                        android:paddingVertical="4dp"
                        android:layout_marginHorizontal="4dp" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Cerrado"
                        android:textColor="#000000"
                        android:background="#9E9E9E"
                        android:paddingVertical="4dp"
                        android:layout_marginHorizontal="4dp" />
                </LinearLayout>

            </LinearLayout>


            <!-- ðŸ”¹ Contenedor de horarios -->
            <GridLayout
                android:id="@+id/gridHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="6"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true" />

            <!-- ðŸ”¹ Switch y botÃ³n Guardar -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <Switch
                    android:id="@+id/switchEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abierto / Cerrado"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GUARDAR"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
