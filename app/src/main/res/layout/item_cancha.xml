<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <!-- 🏷️ Nombre -->
        <TextView
            android:id="@+id/tvNombreCanchaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Cancha"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#1E1E1E" />

        <!-- 📍 Dirección -->
        <TextView
            android:id="@+id/tvDireccionCanchaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="4dp" />

        <!-- 📞 Celular -->
        <TextView
            android:id="@+id/tvCelularCanchaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular: 999999999"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="3dp" />

        <!-- 🕐 Horario -->
        <TextView
            android:id="@+id/tvHorarioCanchaItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horario: 7:00 AM - 11:00 PM"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="3dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
