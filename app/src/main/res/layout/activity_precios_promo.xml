<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MVC.ADMIN.Precios_Promo_Activity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/pp_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pp_btnGuardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/pp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/pp_tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precios y Promoción"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#212121"
                android:gravity="center"
                android:layout_marginBottom="10dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/pp_chipTabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/pp_chipHorario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario"
                    android:checkable="true"
                    app:chipCornerRadius="8dp"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="#BDBDBD"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/pp_chipPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio / Promoción"
                    android:checkable="true"
                    android:checked="true"
                    app:chipCornerRadius="8dp"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="#BDBDBD"
                    app:chipStrokeWidth="1dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/pp_chipDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:checkable="true"
                    app:chipCornerRadius="8dp"
                    app:checkedIconVisible="false"
                    app:chipStrokeColor="#BDBDBD"
                    app:chipStrokeWidth="1dp"/>
            </com.google.android.material.chip.ChipGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

            <!-- Precio Día -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turno Día:"
                    android:textColor="#424242"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pp_tilPrecioDia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pp_etPrecioDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="S/. 30.00"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Precio Noche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turno Noche:"
                    android:textColor="#424242"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pp_tilPrecioNoche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pp_etPrecioNoche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="S/. 50.00"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Título Promoción -->
            <TextView
                android:id="@+id/pp_tvPromoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promoción"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="4dp"/>

            <!-- Promoción Día -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turno Día:"
                    android:textColor="#424242"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pp_tilPromoDia"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pp_etPromoDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0%"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Promoción Noche -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turno Noche:"
                    android:textColor="#424242"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pp_tilPromoNoche"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/pp_etPromoNoche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0%"
                        android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pp_btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUARDAR"
        android:textAllCaps="true"
        app:cornerRadius="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
